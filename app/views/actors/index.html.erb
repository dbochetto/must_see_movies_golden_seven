<h1> Actors <h1>

<a href="http://localhost:3000/actors/new">Add a New Actor</a>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Biography</th>
    <th>Date of Birth</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td>
      <%= actor.bio %>
    </td>
    <td>
      <%= actor.dob %>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/edit/<%= actor.id %>">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
